<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ActivityNuevoExamenConfiguracion"
        tools:showIn="@layout/activity_nuevo_examen_configuracion">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d150"
        android:padding="@dimen/d0">

        <ImageView
            android:id="@+id/nec_iv_cabnecra"
            android:layout_width="0dp"
            android:layout_height="@dimen/d150"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/item_fondo"
            />

        <TextView
            android:id="@+id/nec_titulo"
            style="@style/TextViewCabecera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/d32"
            android:layout_marginStart="@dimen/d16"
            android:text="@string/anec_cabecera" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/d12"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTiempoLimite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextViewLabel"
                    android:text="@string/anec_tv_limite_tiempo" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     />

            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_anec_et_duracion"
                android:theme="@style/EditTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/anec_et_duracion"
                    style="@style/EditTextFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_settings_24dp"
                    android:ems="10"
                    android:hint="@string/anec_et_duracion"
                    android:inputType="text|time" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_anec_et_numero_preguntas"
                android:theme="@style/EditTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/anec_et_numero_preguntas"
                    style="@style/EditTextFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_settings_24dp"
                    android:ems="10"
                    android:hint="@string/anec_et_numero_preguntas"
                    android:inputType="text|number" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_anec_et_valor_blanco"
                android:theme="@style/EditTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/anec_et_valor_blanco"
                    style="@style/EditTextFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_settings_24dp"
                    android:ems="10"
                    android:hint="@string/anec_et_valor_blanco"
                    android:inputType="text|numberDecimal" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_anec_et_valor_acierto"
                android:theme="@style/EditTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/anec_et_valor_acierto"
                    style="@style/EditTextFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_settings_24dp"
                    android:ems="10"
                    android:hint="@string/anec_et_valor_acierto"
                    android:inputType="numberDecimal" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_anec_et_valor_fallo"
                android:theme="@style/EditTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/anec_et_valor_fallo"
                    style="@style/EditTextFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_settings_24dp"
                    android:ems="10"
                    android:hint="@string/anec_et_valor_fallo"
                    android:inputType="numberDecimal" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_anec_et_nota_corte"
                android:theme="@style/EditTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/anec_et_nota_corte"
                    style="@style/EditTextFormulario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_settings_24dp"
                    android:ems="10"
                    android:hint="@string/anec_et_nota_corte"
                    android:inputType="numberDecimal" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>