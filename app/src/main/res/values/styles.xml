<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryDark">@color/green_800</item>
        <item name="colorAccent">@color/deep_orange_800</item>
    </style>


    <style name="TextViewPrincipal">
        <item name="android:textSize">@dimen/d35</item>
        <item name="android:textColor">@color/green_800</item>
        <item name="android:padding">@dimen/d15</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewSecundario">
        <item name="android:textSize">@dimen/d20</item>
        <item name="android:textColor">@color/green_800</item>


        <item name="android:paddingEnd">@dimen/d25</item>
    </style>
    <style name="TextViewLabel">
        <item name="android:textSize">@dimen/d16</item>
        <item name="android:textColor">@color/green_800</item>


        <item name="android:paddingEnd">@dimen/d25</item>
    </style>

    <style name="TextViewInfoConfig">
        <item name="android:textSize">@dimen/d18</item>
        <item name="android:paddingStart">@dimen/d8</item>
        <item name="android:paddingBottom">@dimen/d8</item>
    </style>

    <style name="TextViewCabecera">
        <item name="android:textSize">@dimen/d20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingEnd">@dimen/d25</item>
    </style>

    <style name="ButtonLogin" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/green_800</item>
        <item name="colorControlHighlight">@color/green_400</item>
    </style>


    <style name="ButtonRegistro" parent="Theme.AppCompat">

        <item name="colorButtonNormal">@color/pink_400</item>
        <item name="colorControlHighlight">@color/pink_200</item>
        <item name="android:elevation">@dimen/d2</item>
    </style>

    <style name="EditTextFormulario">
        <item name="android:backgroundTint">@color/green_800</item>
        <item name="android:layout_marginBottom">@dimen/d8</item>

    </style>

    <style name="EditTextLabel">
        <item name="colorAccent">@color/green_800</item>
        <item name="colorControlNormal">@color/green_500</item>
        <item name="colorControlActivated">@color/green_800</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- CARD VIEW -->
    <style name="ItemNombreExamen" parent="TextAppearance.AppCompat.Headline">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="ItemFechaExamen" parent="TextAppearance.AppCompat.Subhead" />

    <style name="ItemAsignaturaExamen" parent="TextAppearance.AppCompat.Headline" />


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
